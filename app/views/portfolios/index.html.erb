<p id="notice"><%= notice %></p>
<h1> Portfolios <h1>
<hr/>

<table>
	<thead>
		<tr>
			<th> Title </th>
			<th> Subtitle </th>
			<th> Body </th>
		</tr>
	</thead>

	<tbody>
		<% @portfolio_itens.each do |portfolio_item| %>
			<tr>
				<td> <%= portfolio_item.title %> </td>
				<td> <%= portfolio_item.subtitle %> </td>
				<td> <%= portfolio_item.body %> </td>
				<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
			</tr>
		<% end %>
		
	</tbody>
</table>
